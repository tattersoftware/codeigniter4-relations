{
	"name": "tatter/relations",
	"type": "library",
	"description": "Entity relationships for CodeIgniter 4",
	"keywords": [
		"codeigniter",
		"codeigniter4",
		"relations",
		"relationships",
		"database",
		"mapping",
		"entity"
	],
	"homepage": "https://github.com/tattersoftware/codeigniter4-relations",
	"license": "MIT",
	"authors": [
		{
			"name": "Matthew Gatner",
			"email": "mgatner@tattersoftware.com",
			"homepage": "https://tattersoftware.com",
			"role": "Developer"
		}
	],
	"require": {
		"php": "^7.2|^8.0",
		"tatter/schemas": "^2.0"
	},
	"require-dev": {
		"codeigniter4/codeigniter4": "dev-develop",
		"tatter/tools": "^1.3",
		"infection/infection": "^0.21.0"
	},
	"autoload": {
		"psr-4": {
			"Tatter\\Relations\\": "src"
		},
		"exclude-from-classmap": [
			"**/Database/Migrations/**"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\Support\\": "tests/_support"
		}
	},
	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/codeigniter4/CodeIgniter4"
		}
	],
	"minimum-stability": "dev",
	"prefer-stable": true,
	"scripts": {
		"analyze": "phpstan analyze",
		"mutate": "infection --threads=2 --coverage=build/phpunit",
		"style": "phpcbf --standard=./vendor/codeigniter4/codeigniter4-standard/CodeIgniter4 tests/ src/",
		"test": "phpunit"
	}
}
